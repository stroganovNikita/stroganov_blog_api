generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  firstname String
  lastname  String
  nickname  String
  password  String @db.VarChar(255)
}

model Posts {
  id        Int        @id @default(autoincrement())
  date      DateTime
  title     String
  image     String
  text      String
  published Boolean    @default(false)
  comments  Comments[]
}

model Comments {
  id         Int      @id @default(autoincrement())
  authorname String
  date       DateTime
  text       String
  post       Posts    @relation(fields: [postId], references: [id])
  postId     Int
}
